<div class="container">
  <div class="row">
    <%= form_for @memory, html: {:class => 'col s12'} do |f| %>
      <div class="row">
        <% if @memory.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@memory.errors.count, 'error') %> prohibited
                this card from being saved:
              </h2>
              <ul>
                <% @memory.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="input-field col s12">
          <%= f.text_field :title, class: 'validate' %>
          <%= f.label :title %>
        </div>

        <div class="input-field col s12">
          <%= f.text_area :description, class: 'materialize-textarea' %>
          <%= f.label :description %>
        </div>

        <div class="input-field col s6">
          <% if current_user.role == 1 %>
          <%= collection_select :card, :source, User.where.not(role: 2), :id, :name %>
          <% else %>
          <%= collection_select :card, :source, User.where(id: current_user.id), :id, :name %>
          <% end %>
          <%= f.label :source %>
        </div>
        <div class="input-field col s6">
          <%= collection_select :card, :era, Era.all, :id, :name, prompt: true %>
          <%= f.label :era %>
        </div>

        <div class="file-field input-field col s12">
          <div class="btn">
            <span>Picture</span>
            <!--<input type="file">-->
            <%= f.file_field :media %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>

        <%= f.submit class: 'btn waves-effect waves-light' %>
      </div>
    <% end %>
  </div>
</div>
